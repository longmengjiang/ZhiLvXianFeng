
.calendar-wrapper.data-v-b14ca078 {
    color: #000;
    width: 670rpx;
    border-radius: 40rpx;
    background-color: #fff;
    font-size: 28rpx;
    text-align: center;
    margin-bottom: 60rpx;
    padding-bottom: 10rpx;
}
.header.data-v-b14ca078 {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 90rpx;
    font-size: 32rpx;
    color: #ae97cb;
    font-weight: bold;
    border-bottom: 4rpx solid #ae97cb;
}
.pre-img.data-v-b14ca078,
.next-img.data-v-b14ca078 {
    width: 50rpx;
    height: 50rpx;
}
.week.data-v-b14ca078 {
    display: flex;
    align-items: center;
    height: 80rpx;
    line-height: 80rpx;
}
.week view.data-v-b14ca078 {
    flex: 1;
}
.content.data-v-b14ca078 {
    position: relative;
    overflow: hidden;
    transition: height 0.4s ease;
}
.days.data-v-b14ca078 {
    transition: top 0.3s;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    position: relative;
}
.item.data-v-b14ca078 {
    position: relative;
    display: block;
    height: 80rpx;
    line-height: 80rpx;
    width: calc(100% / 7);
}
.day.data-v-b14ca078 {
    font-style: normal;
    display: inline-block;
    vertical-align: middle;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    overflow: hidden;
    border-radius: 60rpx;
}
